# GC Storage - Production Environment Variables Template
# Copy this file to .env and fill in the actual values
# NEVER commit .env to version control

# Database
DATABASE_URL=postgres://user:password@host:5432/gc_storage

# Redis
REDIS_URL=redis://:password@host:6379

# MinIO / S3
MINIO_ENDPOINT=
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET=
MINIO_USE_SSL=true

# SMTP
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# JWT (generate secure random strings for production)
JWT_SECRET=
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Server
SERVER_PORT=8080
CORS_ALLOWED_ORIGINS=https://your-domain.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Frontend (Vite)
VITE_API_BASE_URL=https://api.your-domain.com/api/v1
VITE_MINIO_ENDPOINT=https://storage.your-domain.com
