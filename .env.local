# GC Storage - Local Development Environment Variables
# This file is git-tracked and contains fixed values for local development

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/gc_storage?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6379

# MinIO (S3-compatible object storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=gc-storage
MINIO_USE_SSL=false

# SMTP (MailHog for local testing)
SMTP_HOST=localhost
SMTP_PORT=1025

# JWT (local development only - DO NOT use in production)
JWT_SECRET=local-development-secret-key-do-not-use-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# OAuth (dummy values for local development)
GOOGLE_CLIENT_ID=dummy-google-client-id
GOOGLE_CLIENT_SECRET=dummy-google-client-secret
GITHUB_CLIENT_ID=dummy-github-client-id
GITHUB_CLIENT_SECRET=dummy-github-client-secret

# Server
SERVER_PORT=8080
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=console

# Frontend (Vite)
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_MINIO_ENDPOINT=http://localhost:9000
VITE_GOOGLE_CLIENT_ID=dummy-google-client-id
VITE_GITHUB_CLIENT_ID=dummy-github-client-id
